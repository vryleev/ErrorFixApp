<Window x:Class="ErrorFixApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ErrorFixApp"
        mc:Ignorable="d"
        Title="Error Recording App" Height="780" Width="820"
        WindowState="{Binding WState}">
    <Window.DataContext>
        <local:MainWindowModel />
    </Window.DataContext>
    <Window.InputBindings>
        <KeyBinding Modifiers="Control"
                    Key="N"
                    Command="{Binding FixCommand}" />
    </Window.InputBindings>
    <Grid>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" HorizontalAlignment="Stretch"
                            Visibility="{Binding ScreenShotButtonVisibility}">
                    <TextBox
                        SpellCheck.IsEnabled="True" Language="ru-ru"
                        Height="30"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Visible"
                        Text="{Binding Error.RouteName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    <Button Visibility="{Binding ScreenShotButtonVisibility}" Height="100"
                            HorizontalAlignment="Stretch" Command="{Binding Path=FixCommand}">
                        Добавить ошибку в БД
                    </Button>

                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Stretch"
                            Visibility="{Binding ScreenShotButtonVisibility}">
                    <TextBox
                        SpellCheck.IsEnabled="True" Language="ru-ru"
                        Height="30"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Visible"
                        Text="{Binding DatabaseToShow, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    <Button Visibility="{Binding ScreenShotButtonVisibility}" Height="100"
                            HorizontalAlignment="Stretch" Command="{Binding Path=ChangeDatabaseCommand}">
                        Выбрать БД для просмотра
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="2" HorizontalAlignment="Stretch"
                            Visibility="{Binding ScreenShotButtonVisibility}">
                    <TextBox
                        SpellCheck.IsEnabled="True" Language="ru-ru"

                        Height="30"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Visible"
                        Text="{Binding ErrorId, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    <Button Visibility="{Binding ScreenShotButtonVisibility}" Height="100"
                            HorizontalAlignment="Stretch" Command="{Binding Path=LoadCommand}">
                        Просмотр ошибки
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="3" HorizontalAlignment="Stretch">
                    <TextBox
                        SpellCheck.IsEnabled="True" Language="ru-ru"

                        Height="30"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Visible"
                        Text="{Binding XlsToView, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                    <Button Visibility="{Binding ScreenShotButtonVisibility}"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="100"

                            Command="{Binding Path=SelectXlsFileCommand}">
                        Экспорт в XLSX
                    </Button>
                </StackPanel>


            </Grid>
            <Grid Visibility="{Binding Error.ImageVisibility}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Visibility="{Binding ImageVisibility}" HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" MaxHeight="600" Source="{Binding Error.BImageV}" />
                <Image Grid.Column="1" Visibility="{Binding ImageVisibility}" HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" MaxHeight="600" Source="{Binding Error.BImageM}" />
            </Grid>

            <Grid Visibility="{Binding Error.ImageVisibility}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>
               
                <StackPanel Grid.Column="0" >
                    <Label Grid.Column="0">ID:</Label>
                    <TextBox Grid.Column="0"
                             SpellCheck.IsEnabled="True" Language="ru-ru"
                             MinHeight="200"
                             HorizontalAlignment="Stretch"
                             VerticalContentAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             Text="{Binding Error.Id, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Label>Комментарий:</Label>
                    <TextBox
                        SpellCheck.IsEnabled="True" Language="ru-ru"
                        TextWrapping="Wrap"
                        MinHeight="200"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Visible"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Text="{Binding Error.Comment, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Grid.Column="2" >
                    <Label>Дата:</Label>
                    <TextBox
                        SpellCheck.IsEnabled="True" Language="ru-ru"
                        TextWrapping="Wrap"
                        MinHeight="200"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Visible"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Text="{Binding Error.TimeStamp, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Grid.Column="3" >
                    <Label>Позиция:</Label>
                    <TextBox
                        SpellCheck.IsEnabled="True" Language="ru-ru"
                        TextWrapping="Wrap"
                        MinHeight="200"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Visible"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Text="{Binding Error.Position, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Grid.Column="4" >
                    <Label>Номер маршрута:</Label>
                    <TextBox
                        SpellCheck.IsEnabled="True" Language="ru-ru"
                        TextWrapping="Wrap"
                        MinHeight="200"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Visible"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Text="{Binding Error.RouteName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                </StackPanel>
                <Button Grid.Column="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        Visibility="{Binding  AddButtonVisibility}"
                        Command="{Binding Path=SaveCommand}">
                    Сохранить в БД
                </Button>
                <Button Grid.Column="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        Visibility="{Binding  Error.ImageVisibility}"
                        Command="{Binding Path=CancelCommand}">
                    Отмена
                </Button>

            </Grid>


        </StackPanel>
    </Grid>
</Window>